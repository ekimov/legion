node {
    def legion = load legion()

    legion.pod(ram: '1Gi') {
        stage('clone repo'){
            checkout scm
        }
        
        stage('run notebook'){
            legion.runNotebook('Summation.ipynb')
        }

        stage('build'){
            legion.build()
        }

        stage('deploy'){
            legion.deploy(count: 2, timeout: 15)
        }

        stage('run tests') {
            legion.runTests()
        }
    }
}
